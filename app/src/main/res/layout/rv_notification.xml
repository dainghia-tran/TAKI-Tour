<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_noti_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_second_color"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_noti_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika_semibold"
        android:textColor="@color/main_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_noti_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika_semibold"
        android:textColor="@color/main_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_noti_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika"
        android:text="@string/tour_short_description"
        android:textColor="@color/main_color"
        android:textSize="14sp" />

</LinearLayout>