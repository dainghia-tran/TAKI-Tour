<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tour_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_second_color">

    <ImageView
        android:id="@+id/img_tour_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/card_content_descriptor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tour_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/signika_bold"
        android:maxLines="2"
        android:text="Tour Name"
        android:textColor="@color/main_color"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/img_tour_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/tv_tour_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/signika"
        android:maxLines="1"
        android:paddingEnd="2dp"
        android:textColor="@color/main_color"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/img_tour_image"
        app:layout_constraintRight_toLeftOf="@id/img_star"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_name"
        tools:ignore="RtlSymmetry,SmallSp"/>
    <ImageView
        android:id="@+id/img_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_stars_8"
        app:layout_constraintLeft_toRightOf="@id/tv_tour_rating"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_name"
        app:layout_constraintRight_toLeftOf="@id/tv_tour_cost"/>


    <TextView
        android:id="@+id/tv_tour_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika"
        android:maxLines="1"
        android:layout_marginLeft="15dp"
        android:textColor="@color/main_color"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/img_star"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_name"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_tour_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika"
        android:maxLines="1"
        android:layout_marginStart="10dp"
        android:textColor="@color/main_color"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/img_tour_image"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_rating"
        tools:ignore="SmallSp" />




    <TextView
        android:id="@+id/tv_tour_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/signika_semibold"
        android:paddingRight="5dp"
        android:text="@string/tour_guide"
        android:textColor="@color/main_color"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/img_tour_image"
        app:layout_constraintRight_toLeftOf="@id/tv_tour_guide_name"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_duration" />

    <TextView
        android:id="@+id/tv_tour_guide_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/signika_light"
        android:textColor="@color/main_color"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/tv_tour_guide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tour_duration" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_tour_image" />


</androidx.constraintlayout.widget.ConstraintLayout>