<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tour_create_activity"
            android:background="@color/main_color"
            android:padding="30dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/signika_bold"
                    android:textSize="36sp"
                    android:textColor="@color/white"
                    android:text="@string/edit_tour" />

            <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/img_btn_tour_end"
                    android:contentDescription="@string/tour_end"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/ic_baseline_check_24" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/signika"
                    android:text="@string/tour_name" />

            <EditText
                    android:id="@+id/edt_edit_tour_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/signika"
                    android:background="@drawable/bg_second_color"
                    android:textColor="@color/main_color" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/signika"
                    android:text="@string/tour_short_description" />

            <EditText
                    android:id="@+id/edt_edit_tour_short_description"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:fontFamily="@font/signika"
                    android:background="@drawable/bg_second_color"
                    android:textColor="@color/main_color"
                android:gravity="top|left"
                    android:hint="@string/tour_short_description_hint" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/signika"
                    android:text="@string/tour_price" />

            <EditText
                    android:id="@+id/edt_edit_tour_price"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/signika"
                    android:background="@drawable/bg_second_color"
                    android:textColor="@color/main_color"
                    android:inputType="number" />
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/signika"
                    android:text="@string/tour_duration" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/signika"
                            android:text="@string/tour_start"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    <EditText
                            android:id="@+id/edt_edit_tour_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="none"
                            android:background="@drawable/bg_second_color"
                            android:fontFamily="@font/signika"
                            android:textColor="@color/main_color"
                            android:clickable="true"
                            android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/signika"
                            android:text="@string/tour_end"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    <EditText
                            android:id="@+id/edt_edit_tour_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_second_color"
                            android:fontFamily="@font/signika"
                            android:inputType="none"
                            android:clickable="true"
                            android:textColor="@color/main_color"
                            android:focusable="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginVertical="5dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/signika"
                    android:text="@string/tour_bg_image" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/iv_edit_tour_background"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_second_color"
                    android:fontFamily="@font/signika"
                    android:scaleType="centerCrop"/>

                <Button
                        android:id="@+id/btn_edit_upload_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_button"
                        android:fontFamily="@font/signika_semibold"
                        android:text="@string/tour_upload_image"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
                android:id="@+id/btn_edit_confirm_changes"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/signika_semibold"
                android:text="@string/change"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp" />
    </LinearLayout>
</ScrollView>